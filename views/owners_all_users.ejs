<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Owner Profiles</title>
  <link rel="stylesheet" href="/css/profile.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f9fc;
    }

    header {
      background-color: #4b7bec;
      color: white;
      padding: 20px;
      text-align: center;
    }

    .profile-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      padding: 40px;
    }

    .profile-card {
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .profile-card:hover {
      transform: scale(1.03);
    }

    .profile-card img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 15px;
    }

    .view-btn {
      display: inline-block;
      margin-top: 10px;
      background-color: #4b7bec;
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .profile-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
      padding: 40px;
    }

    @media (max-width: 600px) {
      .profile-container {
        grid-template-columns: 1fr;
      }
    }

    .view-btn:hover {
      background-color: #3867d6;
    }
  </style>
</head>
<body>
  <header>
    <h1>All Users Profiles</h1>
  </header>

  <section class="profile-container">
    <% users.forEach(function(user) { %>
      <div class="profile-card">
        <% if(user.Image) { %>
          <img src="data:image/png;base64,<%= user.Image.toString('base64') %>" 
               alt="Profile Picture">
        <% } else { %>
          <img src="https://randomuser.me/api/portraits/women/65.jpg" 
               alt="Default Profile Picture">
        <% } %>
        <h2><%= user.full_name %></h2>
        <p><%= user.email %></p>
        <a href="/order/<%=user._id%>" class="view-btn">View Profile</a>
      </div>
    <% }); %>
  </section>
</body>
</html>